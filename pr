SELECT
    t.name AS TableName,
    con.name AS ConstraintOrIndexName,
    CASE 
        WHEN con.type_desc = 'PRIMARY_KEY_CONSTRAINT' THEN 'PK'
        WHEN con.type_desc = 'DEFAULT_CONSTRAINT' THEN 'DF'
        WHEN con.type_desc = 'UNIQUE_CONSTRAINT' THEN 'UQ'
        WHEN i.type_desc IS NOT NULL THEN 'INDEX'
        ELSE con.type_desc
    END AS ConstraintOrIndexType,
    col.name AS ColumnName
FROM 
    sys.tables t
INNER JOIN 
    sys.schemas s ON t.schema_id = s.schema_id
LEFT JOIN 
    sys.objects con ON con.parent_object_id = t.object_id
LEFT JOIN 
    sys.indexes i ON i.object_id = t.object_id 
                  AND (i.name = con.name OR con.name IS NULL) 
                  AND i.is_hypothetical = 0
LEFT JOIN 
    sys.index_columns ic ON ic.object_id = t.object_id AND ic.index_id = i.index_id
LEFT JOIN 
    sys.columns col ON col.object_id = t.object_id AND col.column_id = ic.column_id
-- Default constraints join
LEFT JOIN 
    sys.default_constraints dc ON dc.parent_object_id = t.object_id 
                               AND dc.object_id = con.object_id
LEFT JOIN 
    sys.columns col2 ON col2.object_id = t.object_id AND col2.column_id = dc.parent_column_id
WHERE 
    s.name = 'dbo'
    AND t.name = 'Customer'
ORDER BY 
    ConstraintOrIndexType, ConstraintOrIndexName, ColumnName;
