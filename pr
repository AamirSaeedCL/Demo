-- Replace this with your actual table name
DECLARE @TableName NVARCHAR(128) = 'YourTableName';

-- Temp table to hold the insert statements
DECLARE @SQL NVARCHAR(MAX) = '';

-- Get column list
DECLARE @ColumnList NVARCHAR(MAX);
SELECT @ColumnList = STRING_AGG(QUOTENAME(name), ', ') 
FROM sys.columns 
WHERE object_id = OBJECT_ID(@TableName);

-- Generate INSERT statements for each row
SELECT @SQL = STRING_AGG('INSERT INTO ' + QUOTENAME(@TableName) + ' (' + @ColumnList + ') VALUES (' + ValuesList + ');', CHAR(13) + CHAR(10))
FROM (
    SELECT (
        SELECT 
            CASE 
                WHEN c.system_type_id IN (167, 175, 231, 239) -- varchar, char, nvarchar, nchar
                    THEN '''' + REPLACE(CAST(t.[value] AS NVARCHAR(MAX)), '''', '''''') + ''''
                WHEN c.system_type_id IN (61, 40, 42, 43) -- datetime types
                    THEN '''' + CONVERT(NVARCHAR, t.[value], 120) + ''''
                WHEN t.[value] IS NULL
                    THEN 'NULL'
                ELSE CAST(t.[value] AS NVARCHAR(MAX))
            END AS val
        FROM sys.columns c
        CROSS APPLY (SELECT TOP 1 v = CONVERT(sql_variant, 
                (SELECT TOP 1 value FROM STRING_SPLIT(CONVERT(NVARCHAR(MAX), 
                    (SELECT t2.* FOR JSON PATH, WITHOUT_ARRAY_WRAPPER)
                ), ',') WHERE value LIKE '%"' + c.name + '":%')
            )) t([value])
        WHERE c.object_id = OBJECT_ID(@TableName)
        ORDER BY c.column_id
        FOR XML PATH(''), TYPE
    ).value('.', 'NVARCHAR(MAX)') AS ValuesList
    FROM (SELECT * FROM [YourTableName]) AS t2
) AS Inserts;

-- Print the result
PRINT @SQL;
