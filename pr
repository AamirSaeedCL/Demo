CREATE TABLE [dbo].[Eligibility] (
    [CustomerId]          BIGINT           NOT NULL,
    [CustomerGroupId]     UNIQUEIDENTIFIER NULL,
    [LitigationMentioned] INT              NULL,
    [Reconnect]           INT              NULL,    
    [PayerSegment]        VARCHAR(20)      NULL,
	[JourneySegment]      VARCHAR(18)      NULL,
    [UpsertDateTime]      DATETIME2 (7)    NOT NULL,
    [LegacyId]            VARCHAR(40)      NOT NULL,
    CONSTRAINT [PK_Eligibility_LegacyId] PRIMARY KEY CLUSTERED ([CustomerId])   
);
GO

CREATE NONCLUSTERED INDEX [NCI_Eligibility_CustomerId]
    ON [dbo].[Eligibility] ([CustomerId])
GO
