-- Disable change tracking for [dbo].[Account]
IF EXISTS (SELECT 1 FROM sys.change_tracking_tables WHERE object_id = OBJECT_ID('[dbo].[Account]'))
BEGIN
    ALTER TABLE [dbo].[Account] DISABLE CHANGE_TRACKING;
END
GO

